generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstname String
  lastname  String
  role      Role     @default(USER)
  recipes   Recipe[] // relation : un utilisateur peut cr√©er plusieurs recettes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Recipe {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  ingredients String
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}
